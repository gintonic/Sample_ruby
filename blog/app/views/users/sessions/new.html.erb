<h2>Sign in <small>- Create Account? -<%= link_to 'Register', new_registration_path(resource_name) %></small></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html: { class: 'form-horizontal well clearfix'}) do |f| %>
	<%= content_tag :fieldset , class: 'span4 offset4' do %>

	  <div>
	  	<%= f.label :email %>
	  	<%= f.email_field :email, :autofocus => true %>
	  </div>

	  <div>
	  	<%= f.label :password %>
	  	<%= f.password_field :password %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>

  <% end %>
<% end %>

