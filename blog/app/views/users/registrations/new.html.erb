<h2>Registration<small> - Already have an Account? - <%= link_to 'Sign In', new_session_path(resource_name) %></small></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{ class: 'form-horizontal well clearfix'} ) do |f| %>

  <%= devise_error_messages! %>
  <%= content_tag :fieldset, class: 'span4 offset4' do %>
	  <div class="control-group">
	  	<%= f.label :email , class: 'control-lebel'%>
	  	<div class="control">
	  		<%= f.email_field :email, :autofocus => true %>
	  	</div>
	  </div>

	  <div class="control-group">
	  	<%= f.label :password , class: 'control-lebel'%>
	  	<div class="control">
	  		<%= f.password_field :password %>
	    </div>
	  </div>

	  <div class="control-group">
	  	<%= f.label :password_confirmation , class: 'control-lebel'%>
	  	<div class="control">
	  		<%= f.password_field :password_confirmation %>
	  	</div>
	  </div>

	  <div class="pull-left">
	  	<%= link_to 'Forgot your password?' , new_password_path(resource_name) %>
	  </div>

	  <div class="pull-right">
	  	<%= f.submit "Sign up" , class: 'btn' %>
	  </div>

	<% end %>

<% end %>
